<wxs module="utils">
var AI_AVATAR = 'https://attach-sit.oss-cn-shanghai.aliyuncs.com/default/28a14b07da0d4e7684758a48649b5ad9.png?1=1';
module.exports = {
  aiAvatar: AI_AVATAR
};
</wxs>

<view class="cu-custom" style="height:{{CustomBar}}px;">
  <view class="cu-bar fixed bg-white" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <navigator class='action' hover-class='none' bindtap='BackPage' wx:if="{{canBack}}">
      <text class='icon-back'></text>
    </navigator>
  </view>
</view>

<view class="container">
  <view class="login-wrapper">
    <image 
      src="{{ utils.aiAvatar }}" 
      mode="aspectFill" 
      class="avatar"
    ></image>
    
    <view class="title">小肉熊AI</view>
    <view class="subtitle">智能健康Ai助手</view>
    
    <button 
      class="login-btn" 
      bindtap="onGetUserInfo"
    >
      <text class="cuIcon-weixin margin-right-xs"></text>
      微信快速登录
    </button>
    
    <view class="agreement">
      登录即代表您同意
      <text class="agreement-link">《用户协议》</text>
      和
      <text class="agreement-link">《隐私政策》</text>
    </view>
  </view>
</view> 